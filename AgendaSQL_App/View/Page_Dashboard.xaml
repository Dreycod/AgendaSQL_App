<UserControl x:Class="AgendaSQL_App.View.Page_Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgendaSQL_App.View"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="539" d:DesignWidth="737">
    <!-- test-->
    <Border BorderThickness="10"  Background="#ededed">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- ************************************ Top Grid ************************************************ -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Contacts" Grid.Row="0" Style="{StaticResource Regular_TB}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Button Content="+ Add New Member" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Btn_Menu}"/>
            </Grid>
            <!-- ************************************ Button Grid ************************************************ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button Content="All" Grid.Column="0" Style="{StaticResource Btn_Menu}"/>
                <Button Content="Family" Grid.Column="1" Style="{StaticResource Btn_Menu}" />
                <Button Content="Friends" Grid.Column="2" Style="{StaticResource Btn_Menu}"/>
                <Button Content="Office" Grid.Column="3" Style="{StaticResource Btn_Menu}"/>
            </Grid>
            
            <!-- ************************************ Filter Grid ************************************************ -->
            <Grid Grid.Row="2" >
                <TextBlock Name="NContacts_TB" Text="10 Total Contacts"/>
                <!-- Add filter by-->
            </Grid>

            <!-- ************************************ Content Grid ************************************************ -->
            <Grid Grid.Row="3" >
                <!--<Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Image Grid.Column="2"  Source="/Ressources/Images/Time.png" Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Margin="7,0,0,0" Text="Reza Alavi" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" TextWrapping="Wrap"/>
                    </StackPanel>

                    <TextBlock Text="Coach" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="Reza.test@gmail.com" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="0947819241" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>-->

                <ListView Name="LV_Contacts" Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="60">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.3*"/>
                                    <ColumnDefinition Width="1.3*"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Image Grid.Column="2"  Source="{Binding ImageUrl}" Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    <TextBlock Margin="7,0,0,0" Text="{Binding ContactName}" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" TextWrapping="Wrap"/>
                                </StackPanel>

                                <TextBlock Text="{Binding ContactRole}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ContactMail}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ContactPhone}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- Add filter by-->
            </Grid>
            <!-- ************************************ Page Grid ************************************************ -->
            <Grid Grid.Row="4" >
               
            </Grid>
        </Grid>
    </Border>
</UserControl>
