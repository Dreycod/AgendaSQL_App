<UserControl x:Class="AgendaSQL_App.View.Page_Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgendaSQL_App.View"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="539" d:DesignWidth="737">
    <!-- test-->
    <Border BorderThickness="10"  Background="#ededed">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="56*"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="335*"/>
                <RowDefinition Height="55.806"/>
            </Grid.RowDefinitions>

            <!-- ************************************ Top Grid ************************************************ -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Contacts" Grid.Row="0" Style="{StaticResource Regular_TB}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Button Content="+ Member" Grid.Column="1"  Style="{StaticResource Btn_Menu}" Click="ToggleAddMember_Click"/>
                <Button Content="- Member" HorizontalAlignment="Center" Grid.Column="2" Style="{StaticResource Btn_Menu}" Click="ToggleRemoveMember_Click"/>
                <Button Content="Save" HorizontalAlignment="Center" Grid.Column="3" Style="{StaticResource Btn_Menu}" Click="SaveMembers_Click"/>
                <Button Content="Reset" HorizontalAlignment="Center" Grid.Column="4" Style="{StaticResource Btn_Menu}" Click="ResetMembers_Click"/>
            </Grid>
            <!-- ************************************ Button Grid ************************************************ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Content="All" Grid.Column="0" Style="{StaticResource Btn_Menu}"/>
                <Button Content="Family" Grid.Column="1" Style="{StaticResource Btn_Menu}" />
                <Button Content="Friends" Grid.Column="2" Style="{StaticResource Btn_Menu}"/>
                <Button Content="Office" Grid.Column="3" Style="{StaticResource Btn_Menu}"/>
            </Grid>

            <!-- ************************************ Filter Grid ************************************************ -->
            <Grid Grid.Row="2" >

                <TextBlock Name="NContacts_TB" Text="10 Total Contacts"/>
                <!-- Add filter by-->
            </Grid>
            <!-- ************************************ Pop-Up Grid ************************************************ -->
            <Grid Grid.Row="3" >
                <Popup Name="NewMemberPopup" IsOpen="False" Placement="Center">
                    <Border Background="White" BorderBrush="Black" BorderThickness="2" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Add New Member" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBox x:Name="Add_NomTB" Text="Name" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_PrenomTB" Text="Prenom" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_AgeTB" Text="Age" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_EmailTB" Text="Email" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_PhoneTB" Text="Phone" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_AddressTB" Text="Address" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_PostalCodeTB" Text="Postal Code" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_CityTB" Text="City" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <DatePicker x:Name="Add_Date" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_CompanyTB" Text="Company" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <TextBox x:Name="Add_SocialMediaTB" Text="Social Media Profiles" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <Button Content="Add_Save" Click="SaveNewMember_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <Popup Name="RemoveMemberPopup" IsOpen="False" Placement="Center">
                    <Border Background="White" BorderBrush="Black" BorderThickness="2" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Remove Member" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBox x:Name="Remove_IDTB" Text="ID" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <Button Content="Remove" Click="RemoveMember_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>

