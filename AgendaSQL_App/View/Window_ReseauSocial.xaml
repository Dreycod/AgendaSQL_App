<Window x:Class="AgendaSQL_App.View.Window_ReseauSocial"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgendaSQL_App.View"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Window_ContactInfo" Height="570" Width="500">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="Title_TB" Grid.Row="0" Grid.ColumnSpan="2" Text="N's Social Profiles" FontSize="20" FontWeight="Bold" Margin="10,0,0,10"/>

        <DataGrid Name="DG_SocialMedia" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding nom}"/>
                <DataGridTextColumn Header="Followers" Binding="{Binding followers}"/>
                <DataGridTextColumn Header="Url" Binding="{Binding url}"/>
            </DataGrid.Columns>
            
        </DataGrid>
        
        <Button Grid.Row="13" Margin="0,0,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2" Height="30" Width="125" FontSize="15" Content="Close" HorizontalAlignment="Center" Click="SaveNewMember_Click" Style="{StaticResource gridEditButton}"/>
    </Grid>
</Window>
